{
  "name": "devtour",
  "publisher": "prezdev",
  "displayName": "devtour",
  "description": "Visualiza el flujo lógico de un proyecto marcando clases y métodos clave directamente desde el editor.",
  "version": "0.1.0-RC1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devtour",
          "title": "Dev Tour",
          "icon": "media/devtour.svg"
        }
      ]
    },
    "views": {
      "devtour": [
        {
          "id": "devtourControlsView",
          "name": "DevTour Controls",
          "type": "webview"
        },
        {
          "id": "devtourSteps",
          "name": "DevTour Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "devtour.startTour",
        "title": "Devtour: Start DevTour Tour",
        "icon": "$(play)"
      },
      {
        "command": "devtour.nextStep",
        "title": "Devtour: Next DevTour Step",
        "icon": "$(arrow-right)"
      },
      {
        "command": "devtour.previousStep",
        "title": "Devtour: Previous DevTour Step",
        "icon": "$(arrow-left)"
      },
      {
        "command": "devtour.stopTour",
        "title": "Devtour: Stop DevTour Tour",
        "icon": "$(stop)"
      },
      {
        "command": "devtour.addStep",
        "title": "Devtour: Add DevTour Step"
      },
      {
        "command": "devtour.openStep",
        "title": "Devtour: Open DevTour Step"
      },
      {
        "command": "devtour.refreshSteps",
        "title": "Devtour: Refresh Steps",
        "icon": "$(refresh)"
      },
      {
        "command": "devtour.openConfig",
        "title": "Devtour: Open DevTour Config",
        "icon": "$(list-selection)"
      },
      {
        "command": "devtour.deleteStep",
        "title": "Devtour: Delete DevTour Step",
        "icon": "$(dash)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "devtour.addStep",
          "when": "editorFocus",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "devtour.startTour",
          "when": "view == devtourSteps",
          "group": "navigation@-1"
        },
        {
          "command": "devtour.nextStep",
          "when": "view == devtourSteps",
          "group": "navigation"
        },
        {
          "command": "devtour.previousStep",
          "when": "view == devtourSteps",
          "group": "navigation"
        },
        {
          "command": "devtour.refreshSteps",
          "when": "view == devtourSteps",
          "group": "navigation"
        },
        {
          "command": "devtour.openConfig",
          "when": "view == devtourSteps",
          "group": "navigation"
        },
        {
          "command": "devtour.stopTour",
          "when": "view == devtourSteps",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devtour.deleteStep",
          "when": "view == devtourSteps && viewItem == devTourStep",
          "group": "inline@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "devtour.addStep",
        "key": "ctrl+d ctrl+a",
        "when": "editorTextFocus"
      },
      {
        "command": "devtour.nextStep",
        "key": "shift+alt+down",
        "when": "editorTextFocus"
      },
      {
        "command": "devtour.previousStep",
        "key": "shift+alt+up",
        "when": "editorTextFocus"
      },
      {
        "command": "devtour.stopTour",
        "key": "shift+alt+backspace",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/node": "20.x",
    "eslint": "^9.25.1"
  },
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/prezdev88/devtour.git"
  }
}
