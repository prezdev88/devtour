{
  "name": "devtour",
  "displayName": "devtour",
  "description": "Visualiza el flujo lógico de un proyecto marcando clases y métodos clave directamente desde el editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devtour",
          "title": "DEVTOUR",
          "icon": "media/devtour.svg"
        }
      ]
    },
    "views": {
      "devtour": [
        {
          "id": "devtourSteps",
          "name": "DevTour Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "devtour.addStep",
        "title": "Devtour: Add DevTour Step"
      },
      {
        "command": "devtour.openStep",
        "title": "Devtour: Open DevTour Step"
      },
      {
        "command": "devtour.refreshSteps",
        "title": "Devtour: Refresh Steps",
        "icon": "$(refresh)"
      },
      {
        "command": "devtour.openConfig",
        "title": "Devtour: Open DevTour Config",
        "icon": "$(list-selection)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "devtour.addStep",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "devtour.refreshSteps",
          "when": "view == devtourSteps",
          "group": "navigation"
        },
        {
          "command": "devtour.openConfig",
          "when": "view == devtourSteps",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "devtour.addStep",
        "key": "ctrl+d ctrl+a",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
